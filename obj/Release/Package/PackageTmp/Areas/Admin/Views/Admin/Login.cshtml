
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">
    <!-- Title Page-->
    <title>Login</title>
    <!-- Fontfaces CSS-->
    <link href="css/font-face.css" rel="stylesheet" media="all">
    <link href="~/Areas/Admin/Content/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="~/Areas/Admin/Content/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" media="all">
    <link href="~/Areas/Admin/Content/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <!-- Bootstrap CSS-->
    <link href="~/Areas/Admin/Content/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">
    <!-- ~/Areas/Admin/Content/vendor CSS-->
    <link href="~/Areas/Admin/Content/vendor/animsition/animsition.min.css" rel="stylesheet" media="all">
    <link href="~/Areas/Admin/Content/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href="~/Areas/Admin/Content/vendor/wow/animate.css" rel="stylesheet" media="all">
    <link href="~/Areas/Admin/Content/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="~/Areas/Admin/Content/vendor/slick/slick.css" rel="stylesheet" media="all">
    <link href="~/Areas/Admin/Content/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/Areas/Admin/Content/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">
    <!-- Main CSS-->
    <link href="~/Areas/Admin/Content/css/theme.css" rel="stylesheet" media="all">
</head>
<body class="animsition">
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="#">
                                <img src="~/Areas/Admin/Content/images/icon/logo.png" alt="CoolAdmin">
                            </a>
                        </div>
                        <div class="login-form">
                            <form action="@Url.Action("Login","Admin")" method="post">
                                <div class="form-group">
                                    <label>User ID</label>
                                    <input class="au-input au-input--full" type="text" autofocus id="id" name="id" required placeholder="User ID">
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input class="au-input au-input--full" type="password" id="password" name="password" required placeholder="Password">
                                </div>
                                <div class="login-checkbox">
                                    <label>
                                        <input type="checkbox" name="remember">Remember Me
                                    </label>
                                    <label>
                                        <a href="#">Forgotten Password?</a>
                                    </label>
                                </div>
                                @if (Session[CommonConstant.MESSAGE] != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @Session[CommonConstant.MESSAGE]
                                    </div>

                                }
                                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">sign in</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Jquery JS-->
    <script src="~/Areas/Admin/Content/vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="~/Areas/Admin/Content/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- ~/Areas/Admin/Content/vendor JS       -->
    <script src="~/Areas/Admin/Content/vendor/slick/slick.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/wow/wow.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/animsition/animsition.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/counter-up/jquery.counterup.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/Areas/Admin/Content/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/select2/select2.min.js"></script>
    <!-- Main JS-->
    <script src="~/Areas/Admin/Content/js/main.js"></script>
</body>
</html>
<!-- end document-->